                <DataGridTextColumn x:Name="proteinNameColumn1" Binding="{Binding ProteinName}" Header="Protein Name" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="sequenceColumn1" Binding="{Binding Sequence}" Header="Sequence" Width="SizeToHeader"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
